{
    "name": "@lf-lang/reactor-ts",
    "version": "0.3.2",
    "description": "A reactor-oriented programming framework in TypeScript",
    "main": "lib/core/index.js",
    "types": "src/core",
    "type": "commonjs",
    "dependencies": {
        "command-line-args": "^5.1.1",
        "command-line-usage": "^6.1.3",
        "microtime": "^3.0.0",
        "nanotimer": "^0.3.15",
        "rimraf": "^3.0.2",
        "ulog": "^1.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
        "@babel/plugin-proposal-optional-chaining": "^7.8.0",
        "@babel/preset-typescript": "^7.7.7",
        "@babel/preset-env": "^7.4.3",
        "@types/command-line-args": "^5.2.0",
        "@types/command-line-usage": "^5.0.2",
        "@types/jest": "^27.0.0",
        "@types/microtime": "^2.1.0",
        "@types/nanotimer": "^0.3.0",
        "@types/node": "^16.3.3",
        "@types/uuid": "^8.3.4",
        "dtslint": "^3.4.2",
        "jest": "^27.5.1",
        "ts-jest": "^27.0.3",
        "typedoc": "0.23.11",
        "typescript": "~4.8.2"
    },
    "scripts": {
        "check-types": "tsc",
        "install": "npx rimraf lib && npx babel src --out-dir lib --extensions .ts",
        "doc": "typedoc --out docs src/core/index.ts && touch docs/.nojekyll",
        "dtslint": "dtslint __tests__/types",
        "test": "jest --coverage",
        "prepublish": "npx tsc"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "babelConfig": "<rootDir>/.babelrc"
            }
        },
        "testPathIgnorePatterns": [
            "node_modules",
            "defunct",
            "<rootDir>/__tests__/types"
        ],
        "roots": [
            "<rootDir>/src",
            "<rootDir>/__tests__"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:lf-lang/reactor-ts.git"
    },
    "keywords": [
        "reactors",
        "deterministic",
        "concurrency",
        "timing",
        "runtime"
    ],
    "author": {
        "name": "Marten Lohstroh",
        "email": "marten@berkeley.edu",
        "url": "https://marten.fyi"
    },
    "contributors": [
        "Yunsang Cho",
        "Wonseo Choi",
        "Peter Donovan",
        "Andres Goens",
        "Hokeun Kim",
        "Matt Weber",
        "Ben Zhang"
    ],
    "license": "MIT"
}
